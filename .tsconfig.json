{
    "compilerOptions": {
      "jsx": "react",
      "module": "es6",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es2017",
        "dom"
       ],
       "moduleResolution": "Node"
    },
     "include": ["src/**/*"]
  }